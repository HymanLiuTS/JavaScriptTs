<!doctype html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<script>
function loadDoc(str)
{
	
	if(str.length==0)
	{
		document.getElementById('content').innerHTML="";
		return;
	}
  var xmlhttp;
  if(window.XMLHttpRequest)
  {
  	xmlhttp=new XMLHttpRequest();
  }
  else
  {
  	xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
  }
  xmlhttp.onreadystatechange=function()
  {
  	
  	if (xmlhttp.readyState==4&&xmlhttp.status==200)
  	{
  		//获取指定的响应的头部信息
  		document.getElementById('p1').innerHTML="This file was last modified on: " + xmlhttp.getResponseHeader('Content-Type');
  		//获取所有的响应的头部
  		document.getElementById("header").innerHTML=xmlhttp.getAllResponseHeaders();
  		//获取所有响应的内容
  		document.getElementById("content").innerHTML=xmlhttp.responseText;
  		
  	}
  }
  xmlhttp.open('GET','/post/'+str,true);
  xmlhttp.send();
}
</script>	 
</head>
<body>
<form>
文章ID：<input name="q" onkeyup="loadDoc(this.value)">
</form>
<p id="p1">
</p>
<div id="header">
</div>
<div id="content">
</div>
</body>
</html>
 